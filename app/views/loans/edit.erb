<form method='POST' action='/loans/<%=@loan.id%>'>
    <input type='hidden' id='hidden' name='_method' value='patch'>
    Name: <input type="text" name="loan[name]" value='<%=@loan.name%>' id="loan_name">
    Number: <input type="text" name="loan[number]" value='<%=@loan.number%>' id="loan_num">
    Amount: <input type="text" name="loan[amount]" value='<%=@loan.amount%>' id="loan_amt">
    <%if !!@loan.entities%>
        <h3>Select Entities for this loan:</h3>
        <h4>Borrowers:</h4>
        <%@loan.entities.each do |entity|%>
            <%if entity.entity_type == "Borrower"%>
                <p><%=entity.name%> <input type="checkbox" checked="<%=@loan.entities.include?(entity) ? 'checked' : 'unchecked'%>" name="loan[entity_ids][]" value="<%=entity.id%>" id="loan"></p>
                <%end%>
            <%end%>
        <h4>Operating Companies:</h4>
        <%@loan.entities.each do |entity|%>
            <%if entity.entity_type == "Operating Company"%>
                <p><%=entity.name%> <input type="checkbox" checked="<%=@loan.entities.include?(entity) ? 'checked' : 'unchecked'%>" name="loan[entity_ids][]" value="<%=entity.id%>" id="loan"></p>
            <%end%>
        <%end%>
    <%end%>
    <input type='submit' value="Save">
</form>
