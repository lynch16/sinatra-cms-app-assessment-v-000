<form method='POST' action='/loans'>
    Name: <input type="text" name="loan[name]" id="loan_name">
    Number: <input type="text" name="loan[number]" id="loan_num">
    Amount: <input type="text" name="loan[amount]" id="loan_amt">

    <%if !!@entities%>
        <h3>Select Entities for this loan:</h3>
        <p>Note: Entity can only belong to one loan at a time</p>
        <h4>Borrowers:</h4>
        <%@entities.each do |entity|%>
            <%if entity.entity_type == "Borrower"%>
                <p><%=entity.name%> <input type="checkbox" name="entity_ids[]" value="<%=entity.id%>" id="loan"></p>
            <%end%>
        <%end%>
        <h4>Operating Companies:</h4>
        <%@entities.each do |entity|%>
            <%if entity.entity_type == "Operating Company"%>
                <p><%=entity.name%> <input type="checkbox" name="entity_ids[]" value="<%=entity.id%>" id="loan"></p>
            <%end%>
        <%end%>
    <%end%>

    <input type='submit' value="Create Loan">
</form>
