<h3>Entities</h3>
<table style="width:100%">
  <tr>
    <th>Entity Name</th>
    <th>Entity Type</th>
    <th>Entity Structure</th>
    <th>Loan Name</th>
  </tr>
  <%@entities.each do |entity|%>
  <tr>
    <td><a href="/entities/<%=entity.id%>"><%=entity.name%></a></td>
    <td><%=entity.entity_type%></td>
    <td><%=entity.structure%></td>
    <td><%if !!entity.loan%>
        <a href="/loans/<%=entity.loan.id%>"><%=entity.loan.name%></a><%end%></td>
  </tr>
  <%end%>
 </table>
<br>
<br>

<p><a href="/entities/new">Create New Entity</a></p>
